{
    "/": {
        "controller": "IndexController",
        "action": "index",
        "methods": ["GET"]
    },
    "/users": {
        "controller": "UsersController",
        "action":"index",
        "methods": ["GET"]
    },
    "/users/show": {
        "controller": "UsersController",
        "action":"show",
        "methods": ["GET"],
        "required": ["id"]
